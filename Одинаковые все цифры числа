##
var a, b, c, num: integer; 
var otvet1, otvet2, otvet3: boolean;
read(num);
a := num mod 10; 
b := num div 10 mod 10; 
c := num div 100; 
if (a = b) and (a = c) then 
  otvet1 := true;       
if (b = a) and (b = c) then 
  otvet2 := true;  
if (c = b) and (c = a) then 
  otvet3 := true;    
if otvet1 = true and otvet2 = true and otvet1 = true then 
  Writeln('Верно ли, что все цифры введённого числа одинаковы? ', true)
else Writeln('Верно ли, что все цифры введённого числа одинаковы? ', false); 
